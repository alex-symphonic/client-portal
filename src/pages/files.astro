---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { Card } from '@/components/ui/card';
import { FileEmbed } from '@/components/files/FileEmbed';

---

<DashboardLayout title="Files & Assets">
  <div class="container px-8 py-6">
    <div class="flex flex-col gap-2 mb-8">
      <h1 class="text-3xl font-bold">Files & Assets</h1>
      <p class="text-muted-foreground">
        Access and manage all your project files and assets in one place.
      </p>
    </div>

    <Card className="p-6">
      <FileEmbed client:load />
    </Card>
  </div>
</DashboardLayout>